const test_fib = fn(name, fib) => {
    assert_eq(fib(0), 0);
    assert_eq(fib(1), 1);
    assert_eq(fib(2), 1);
    assert_eq(fib(3), 2);
    assert_eq(fib(4), 3);
    assert_eq(fib(5), 5);
    assert_eq(fib(6), 8);
    assert_eq(fib(7), 13);
    assert_eq(fib(8), 21);
    assert_eq(fib(9), 34);
    assert_eq(fib(10), 55);
    assert_eq(fib(20), 6765);

    println("Successfully tested ", name, "!");
};

const countdown = fn(n, step) => {
    print(n, " ");
    if n > 0 then countdown(min(n - step, 0), step);
};

const test_countdown = fn() => {
    countdown(0, 5);
    println();
    countdown(1, 1);
    println();
    countdown(10, 1);
    println();
    countdown(100, 8);
    println();
};

const test_fake_loops = fn() => {
    const while_do = fn(i, increment, condition, body) => {
        if not condition(i) then return;
        body(i);
        while_do(increment(i), increment, condition, body);
    };

    while_do(
        0,
        fn(i) => i + 2,
        fn(i) => i < 10,
        fn(i) => println("i = ", i)
    );
};

const outer = fn(n) => {
    const inner = fn(n) => n + 1;
    n - (if n < 0 then inner(n) else outer(n))
};

const min = fn(value, min) any => {
    if value < min then min else value
};

const max = fn(value, max) any => {
    if value > max then max else value
};

const clamp = fn(value, min, max) any => {
    if value < min then
        min
    else if value > max then
        max
    else
        value
};
